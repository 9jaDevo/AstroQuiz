# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# AI Provider Configuration
# Set to 'openai' or 'huggingface'
# OpenAI is recommended for better reliability
AI_PROVIDER=openai

# OpenAI API Configuration (recommended - more reliable)
# Used for question generation, AI tutor chat, and translation
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API Configuration (alternative option)
# Get your free API key from: https://huggingface.co/settings/tokens
# Note: HF endpoints may occasionally be unavailable
# Used as fallback for question generation, AI tutor chat, and translation
HF_API_KEY=your_huggingface_api_key_here